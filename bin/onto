#!/bin/sh

# exit if no $host
host=$1
if [[ "$host" == "" ]]; then
  exit 1
fi

# change to existing tmux window, or
# create a new window and
# ssh to host
# reattach or start a tmux session
tmux select-window -t wrapper:$host || tmux new-window -t wrapper -n $host "ssh -t $host \"tmux attach -t $host || tmux new-session -s $host\""

