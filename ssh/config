# Description:  Config for ssh client
#

# Global Settings
ForwardAgent yes
#VisualHostKey yes
HashKnownHosts no
#ConnectTimeout 2
ServerAliveCountMax 6
ServerAliveInterval 30

# My Hosts
Host mac-mini mac-mini.benohara.net
    Hostname bens-mac-mini.local
Host excession excession.mikegrice.com
    User benoh
    Hostname excession.mikegrice.com

# Default
Host *
    User bohara
    SendEnv LANG LC_*
    StrictHostKeyChecking ask
    ControlMaster auto
    #ControlPersist yes
    ControlPath ~/.ssh/master/%r@%h:%p
    ServerAliveInterval 600
