# Global Settings
ForwardAgent yes
#VisualHostKey yes
HashKnownHosts no
#ConnectTimeout 2
ServerAliveCountMax 6
ServerAliveInterval 30

# My Hosts
#Host hostname hostname.fqdn.com
#    Hostname hostname.fqdn.com

# Default
Host *
    StrictHostKeyChecking ask
    ControlMaster auto
    ControlPersist yes
    ControlPath ~/.ssh/master/%r@%h:%p
    ServerAliveInterval 600
