# Global Settings
ForwardAgent yes
#VisualHostKey yes
HashKnownHosts no
#ConnectTimeout 2

# My Hosts
Host home home.benohara.net
    Hostname home.benohara.net
Host mac-mini mac-mini.benohara.net
    Hostname bens-mac-mini.local
Host excession excession.mikegrice.com
    User benoh
    Hostname excession.mikegrice.com

# Local development
Host localhost
    UserKnownHostsFile /dev/null
    StrictHostKeyChecking no

# Default
Host *
    User bohara
    StrictHostKeyChecking ask
    ServerAliveCountMax 6
    ServerAliveInterval 30
    KeepAlive yes
    #ControlMaster auto
    #ControlPath ~/.ssh/master/%r@%h:%p

