# Global Settings
ForwardAgent yes
#VisualHostKey yes
HashKnownHosts no
#ConnectTimeout 2
ServerAliveCountMax 6
ServerAliveInterval 30
KeepAlive yes

# My Hosts
Host home home.benohara.net
    Hostname home.benohara.net
Host mac-mini mac-mini.benohara.net
    Hostname bens-mac-mini.local
Host excession excession.mikegrice.com
    User benoh
    Hostname excession.mikegrice.com

# Work
Host *lb1 *gb1
    User admin
    PubkeyAuthentication no
Host aox* aox* nxx*
    User netops
    PubkeyAuthentication no
Host aogw* aocs* aos* aol* nxgw* nxcs* nxs* iagw* iacs* ias*
    PubkeyAuthentication no
Host nxgw1
    Protocol 1

# Default
Host *
    User bohara
    StrictHostKeyChecking ask
